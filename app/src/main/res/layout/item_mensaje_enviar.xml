<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="end">

    <TextView
        android:id="@+id/tvMensajeEnviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/enviar_mensaje_background"
        android:padding="10dp"
        android:text="Mensaje enviado"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTimestampEnviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora Enviado"
        android:textColor="@color/md_cyan_900"
        android:textSize="12sp"/>

</LinearLayout>